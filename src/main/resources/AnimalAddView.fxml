<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AnimalAddController" alignment="CENTER" hgap="10" vgap="5" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Text text="Add Animal" style="-fx-font-size: 18; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label fx:id="nomErrorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
    <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="nomField" promptText="Enter animal's name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label fx:id="typeErrorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="typeField" promptText="Enter animal's type" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label fx:id="raceErrorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
    <Label text="Race:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="raceField" promptText="Enter animal's race" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label fx:id="ageErrorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
    <Label text="Ã‚ge:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="ageField" promptText="Enter animal's age" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label fx:id="poidsErrorLabel" style="-fx-text-fill: red;" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
    <Label text="Poids:" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <TextField fx:id="poidsField" promptText="Enter animal's weight" GridPane.columnIndex="1" GridPane.rowIndex="10"/>

    <HBox spacing="10" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="11">
        <Button text="Add Animal" onAction="#handleAddAnimal" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</GridPane>