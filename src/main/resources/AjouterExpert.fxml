<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.AjouterExpert">

   <children>
      <VBox layoutX="39.0" layoutY="47.0" prefWidth="500" spacing="20" style="-fx-background-color: #2e7d32; -fx-padding: 20px;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Ajouter un Expert" />

            <!-- Nom Field -->
            <TextField fx:id="nomField" promptText="Nom" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="nomErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Prenom Field -->
            <TextField fx:id="prenomField" promptText="Prénom" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="prenomErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Tel Field -->
            <TextField fx:id="telField" promptText="Téléphone (8 chiffres)" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="telErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Email Field -->
            <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="emailErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Zone Field -->
            <TextField fx:id="zoneField" promptText="Zone géographique" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="zoneErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Disponibilité ComboBox -->
            <ComboBox fx:id="dispoCombo" promptText="Disponibilité" style="-fx-pref-width: 350px; -fx-padding: 8px; -fx-background-color: white; -fx-border-color: #4CAF50; -fx-border-width: 2px;" />
            <Label fx:id="dispoErrorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;"/>

            <!-- Ajouter Button -->
            <Button onAction="#onAjout" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 350px; -fx-padding: 10px; -fx-border-radius: 5px;" text="Ajouter" />

            <!-- Error Message -->
            <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" />
         </children>
      </VBox>
   </children>
</AnchorPane>
