<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AjouterExpert"
            prefWidth="600" prefHeight="400"
            stylesheets="@style.css">

   <children>
      <VBox spacing="10" layoutX="100" layoutY="30" prefWidth="400">
         <children>
            <Label text="Ajouter un Expert" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <TextField fx:id="nomField" promptText="Nom" />
            <TextField fx:id="prenomField" promptText="Prénom" />
            <TextField fx:id="telField" promptText="Téléphone (8 chiffres)" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="zoneField" promptText="Zone géographique" />
            <ComboBox fx:id="dispoCombo" promptText="Disponibilité" />
            <Button text="Ajouter" onAction="#onAjout" />
            <Label fx:id="messageLabel" textFill="green" />
         </children>
      </VBox>
   </children>
</AnchorPane>
