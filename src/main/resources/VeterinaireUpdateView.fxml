<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" stylesheets="@styleee.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VeterinaireUpdateController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Text style="-fx-font-size: 18; -fx-font-weight: bold;" styleClass="card-title" text=" Update Veterinaire" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <TextField fx:id="idField" promptText="ID du vétérinaire" styleClass="text-field" />
    <TextField fx:id="nomField" promptText="Nom" />
    <TextField fx:id="numTelField" promptText="Numéro de téléphone" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="adresseCabineField" promptText="Adresse du cabinet" />
    <Button onAction="#handleUpdateVeterinaire" styleClass="submit-button" stylesheets="@form.css" text="Mettre à jour">
      <opaqueInsets>
         <Insets />
      </opaqueInsets></Button>
</VBox>
