<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AfficherExpert">

    <!-- EN-TÊTE -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="15" right="10" bottom="15" left="10"/>
            </padding>
            <Label text="Liste des Experts" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- CENTRE : TableView -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TableView fx:id="expertTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" />
                    <TableColumn fx:id="nomCol" text="Nom" />
                    <TableColumn fx:id="prenomCol" text="Prénom" />
                    <TableColumn fx:id="telCol" text="Téléphone" />
                    <TableColumn fx:id="emailCol" text="Email" />
                    <TableColumn fx:id="zoneCol" text="Zone" />
                    <TableColumn fx:id="dispoCol" text="Disponibilité" />
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Ajouter" onAction="#onAjouter"/>
                <Button text="Modifier" onAction="#onModifier"/>
                <Button text="Supprimer" onAction="#onSupprimer"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
