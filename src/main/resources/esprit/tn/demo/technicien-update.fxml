<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionMachine.ModifyTechnicien">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Modifier Technicien">
            <font>
                <Font name="Montserrat SemiBold" size="24.0" />
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="80.0" text="Nom:" />
        <TextField fx:id="nameField" layoutX="200.0" layoutY="75.0" prefWidth="300.0" promptText="Entrez le nom" />

        <Label layoutX="50.0" layoutY="120.0" text="Prénom:" />
        <TextField fx:id="prenomField" layoutX="200.0" layoutY="115.0" prefWidth="300.0" promptText="Entrez le prénom" />

        <Label layoutX="50.0" layoutY="160.0" text="Spécialité:" />
        <TextField fx:id="specialiteField" layoutX="200.0" layoutY="155.0" prefWidth="300.0" promptText="Entrez la spécialité" />

        <Label layoutX="50.0" layoutY="200.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="200.0" layoutY="195.0" prefWidth="300.0" promptText="Entrez l'email" />

        <Label layoutX="50.0" layoutY="240.0" text="Téléphone:" />
        <TextField fx:id="telephoneField" layoutX="200.0" layoutY="235.0" prefWidth="300.0" promptText="Entrez le téléphone" />

        <Label layoutX="50.0" layoutY="280.0" text="Localisation:" />
        <TextField fx:id="localisationField" layoutX="200.0" layoutY="275.0" prefWidth="300.0" promptText="Entrez la localisation" />

        <Label layoutX="50.0" layoutY="320.0" text="Latitude:" />
        <TextField fx:id="latitudeField" layoutX="200.0" layoutY="315.0" prefWidth="300.0" promptText="Entrez la latitude" />

        <Label layoutX="50.0" layoutY="360.0" text="Longitude:" />
        <TextField fx:id="longitudeField" layoutX="200.0" layoutY="355.0" prefWidth="300.0" promptText="Entrez la longitude" />

        <Button fx:id="saveButton" layoutX="200.0" layoutY="500.0" prefWidth="100.0" text="Enregistrer" styleClass="btn-primary" stylesheets="@Css/machine-theme.css" onAction="#handleSave" />
        <Button fx:id="cancelButton" layoutX="350.0" layoutY="500.0" prefWidth="100.0" text="Annuler" styleClass="btn-secondary" stylesheets="@Css/machine-theme.css" onAction="#handleCancel" />
    </children>
</AnchorPane>