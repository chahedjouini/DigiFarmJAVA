<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.VeterinaireReadController" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Text text="Veterinaires List" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TableView fx:id="veterinaireTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="nomCol" text="Nom" prefWidth="100"/>
            <TableColumn fx:id="numTelCol" text="Numéro de Téléphone" prefWidth="150"/>
            <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
            <TableColumn fx:id="adresse_cabineCol" text="Adresse du Cabinet" prefWidth="200"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
    <Button text="Add New Veterinaire" onAction="#handleAddVeterinaire" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

</VBox>
