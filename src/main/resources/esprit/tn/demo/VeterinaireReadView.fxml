<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.VeterinaireReadController" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>

    <Text text="Veterinaires List" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TextField fx:id="searchNomField" promptText="Rechercher par Nom" maxWidth="Infinity" />
    <TableView fx:id="veterinaireTable" prefHeight="400.0" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nomCol" prefWidth="100.0" text="Nom" />
            <TableColumn fx:id="numTelCol" prefWidth="150.0" text="Numéro de Téléphone" />
            <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
            <TableColumn fx:id="adresse_cabineCol" prefWidth="200.0" text="Adresse du Cabinet" />
            <TableColumn fx:id="actionsCol" prefWidth="150.0" text="Actions" />
        </columns>
    </TableView>
    <Button text="Add New Veterinaire" onAction="#handleAddVeterinaire" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    <Button mnemonicParsing="false" onAction="#handleOpenAnimaux" text="Afficher les Animaux">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
    <Button mnemonicParsing="false" onAction="#handleOpenSuivi" text="Afficher le Suivi des Animaux">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>

</VBox>