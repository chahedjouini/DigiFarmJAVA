<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;" stylesheets="@dashboardDesign.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.VeterinaireReadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text style="-fx-font-size: 18; -fx-font-weight: bold;" text="Veterinaires List" />
    <TextField fx:id="searchNomField" maxWidth="Infinity" promptText="Rechercher par Nom" />
    <TableView fx:id="veterinaireTable" maxWidth="Infinity" prefHeight="400.0" stylesheets="@dashboardDesign.css" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nomCol" prefWidth="100.0" text="Nom" />
            <TableColumn fx:id="numTelCol" prefWidth="150.0" text="Numéro de Téléphone" />
            <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
            <TableColumn fx:id="adresse_cabineCol" prefWidth="200.0" text="Adresse du Cabinet" />
            <TableColumn fx:id="actionsCol" prefWidth="150.0" text="Actions" />
        </columns>
    </TableView>
    <Button minHeight="35.0" onAction="#handleAddVeterinaire" prefWidth="210.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add New Veterinaire" />
    <Button minHeight="35.0" mnemonicParsing="false" onAction="#handleOpenAnimaux" prefWidth="210.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Afficher les Animaux">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
    <Button minHeight="35.0" mnemonicParsing="false" onAction="#handleOpenSuivi" prefWidth="210.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Afficher le Suivi des Animaux">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>

</VBox>
