<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.AnimalReadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="animalTable" prefHeight="350.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="nomCol" prefWidth="75.0" text="Nom" />
                <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
                <TableColumn fx:id="raceCol" prefWidth="75.0" text="Race" />
                <TableColumn fx:id="ageCol" prefWidth="75.0" text="Ã‚ge" />
                <TableColumn fx:id="poidsCol" prefWidth="75.0" text="Poids" />
                <TableColumn fx:id="actionsCol" prefWidth="150.0" text="Actions" />
            </columns>
        </TableView>
        <Button mnemonicParsing="false" onAction="#handleAddAnimal" text="Ajouter Animal">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleOpenStatistiques" text="Afficher les Statistiques">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>