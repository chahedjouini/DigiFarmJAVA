<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviUpdateController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20">

    <Label text="Mettre à jour un Suivi" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="idField" promptText="ID Suivi" editable="false" />

    <ComboBox fx:id="animalComboBox" promptText="Sélectionner un animal" />

    <TextField fx:id="temperatureField" promptText="Température" />
    <TextField fx:id="rythmeCardiaqueField" promptText="Rythme cardiaque" />
    <TextField fx:id="etatField" promptText="État" />
    <TextField fx:id="idClientField" promptText="ID Client" />
    <TextField fx:id="analysisField" promptText="Analyse" />

    <Button text="Mettre à jour" onAction="#handleUpdate" />
</VBox>
