<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionMachine.ModifyMachine">
    <children>
        <Label layoutX="50.0" layoutY="30.0" text="Modifier Machine">
            <font>
                <Font name="Montserrat SemiBold" size="24.0" />
            </font>
        </Label>
        <!-- Nom -->
        <Label layoutX="50.0" layoutY="80.0" text="Nom:" />
        <TextField fx:id="nomField" layoutX="200.0" layoutY="75.0" prefWidth="300.0" promptText="Entrez le nom" />
        <!-- Type -->
        <Label layoutX="50.0" layoutY="120.0" text="Type:" />
        <TextField fx:id="typeField" layoutX="200.0" layoutY="115.0" prefWidth="300.0" promptText="Entrez le type" />
        <!-- Date Achat -->
        <Label layoutX="50.0" layoutY="160.0" text="Date d'achat:" />
        <DatePicker fx:id="dateAchatPicker" layoutX="200.0" layoutY="155.0" prefWidth="300.0" />
        <!-- Etat -->
        <Label layoutX="50.0" layoutY="200.0" text="État:" />
        <ComboBox fx:id="etatComboBox" layoutX="200.0" layoutY="195.0" prefWidth="300.0" promptText="Sélectionnez l'état" />
        <!-- Etat Pred -->
        <Label layoutX="50.0" layoutY="240.0" text="État Précédent (optionnel):" />
        <TextField fx:id="etatPredField" layoutX="200.0" layoutY="235.0" prefWidth="300.0" promptText="Entrez l'état précédent" />
        <!-- Buttons -->
        <Button fx:id="btnModifier" layoutX="200.0" layoutY="500.0" prefWidth="100.0" text="Enregistrer" styleClass="btn-primary" stylesheets="@Css/machine-theme.css" onAction="#modifierMachine" />
        <Button fx:id="btnAnnuler" layoutX="350.0" layoutY="500.0" prefWidth="100.0" text="Annuler" styleClass="btn-secondary" stylesheets="@Css/machine-theme.css" onAction="#annulerModification" />
    </children>
</AnchorPane>