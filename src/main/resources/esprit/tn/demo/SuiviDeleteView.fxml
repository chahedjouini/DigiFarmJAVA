<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <!-- Added missing import for HBox -->
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviDeleteController" alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Text text="Delete Suivi" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label fx:id="confirmationLabel" text="Are you sure you want to delete this Suivi?" style="-fx-font-size: 14;"/>
    <VBox spacing="5" alignment="CENTER">
        <Label fx:id="animalLabel" style="-fx-font-weight: bold;"/>
        <Label fx:id="veterinaireLabel" style="-fx-font-weight: bold;"/>
    </VBox>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Delete" onAction="#handleDeleteSuivi" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#handleCancel" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
</VBox>