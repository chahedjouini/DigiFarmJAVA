<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER"  prefHeight="543.0" prefWidth="848.0" style="-fx-border-color: #4CAF50;" stylesheets="@dashboardDesign.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviReadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="suiviTableView" prefHeight="350.0" prefWidth="600.0" stylesheets="@dashboardDesign.css">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="animalColumn" prefWidth="100.0" text="Animal" />
                <TableColumn fx:id="temperatureColumn" prefWidth="80.0" text="Température" />
                <TableColumn fx:id="rythmeCardiaqueColumn" prefWidth="120.0" text="Rythme Cardiaque" />
                <TableColumn fx:id="etatColumn" prefWidth="80.0" text="État" />
                <TableColumn fx:id="idClientColumn" prefWidth="80.0" text="ID Client" />
                <TableColumn fx:id="analysisColumn" prefWidth="150.0" text="Analyse" />
                <TableColumn fx:id="veterinaireNomColumn" prefWidth="120.0" text="Vétérinaire" />
                <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
            </columns>
        </TableView>
        <Button mnemonicParsing="false" onAction="#handleAddSuivi" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Ajouter un Suivi" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button  mnemonicParsing="false" onAction="#handleOpenStatistiques" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Afficher les Statistiques" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button  mnemonicParsing="false" onAction="#handleExportToExcel" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Exporter vers Excel" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button  mnemonicParsing="false" onAction="#handleOpenAnimaux" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Retour à la Liste des Animaux" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button  mnemonicParsing="false" onAction="#handleOpenVeterinaires" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Retour à la Liste des Vétérinaires" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>


    </children>
</VBox>
