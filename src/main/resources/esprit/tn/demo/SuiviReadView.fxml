<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviReadController"
      spacing="15" alignment="CENTER" style="-fx-padding: 30;">

    <Label text="Liste des Suivis" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TableView fx:id="suiviTable" prefWidth="700" prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="animalCol" text="Animal" prefWidth="100"/>
            <TableColumn fx:id="tempCol" text="Température" prefWidth="100"/>
            <TableColumn fx:id="rythmeCol" text="Rythme Cardiaque" prefWidth="120"/>
            <TableColumn fx:id="etatCol" text="État" prefWidth="100"/>
            <TableColumn fx:id="idClientCol" text="ID Client" prefWidth="100"/>
            <TableColumn fx:id="analysisCol" text="Analyse" prefWidth="130"/>
        </columns>
    </TableView>
</VBox>
