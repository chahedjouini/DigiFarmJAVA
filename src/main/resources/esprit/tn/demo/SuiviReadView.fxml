<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviReadController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <TableView fx:id="suiviTableView" prefHeight="350.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="animalColumn" prefWidth="100.0" text="Animal" />
                <TableColumn fx:id="temperatureColumn" prefWidth="80.0" text="Température" />
                <TableColumn fx:id="rythmeCardiaqueColumn" prefWidth="120.0" text="Rythme Cardiaque" />
                <TableColumn fx:id="etatColumn" prefWidth="80.0" text="État" />
                <TableColumn fx:id="idClientColumn" prefWidth="80.0" text="ID Client" />
                <TableColumn fx:id="analysisColumn" prefWidth="150.0" text="Analyse" />
                <TableColumn fx:id="veterinaireNomColumn" prefWidth="120.0" text="Vétérinaire" />
                <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
            </columns>
        </TableView>
        <Button mnemonicParsing="false" onAction="#handleAddSuivi" text="Ajouter un Suivi">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleOpenStatistiques" text="Afficher les Statistiques">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleOpenAnimaux" text="Retour à la Liste des Animaux">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleOpenVeterinaires" text="Retour à la Liste des Vétérinaires">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>