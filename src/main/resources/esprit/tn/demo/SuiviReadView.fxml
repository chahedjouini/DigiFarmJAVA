<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="esprit.tn.demo.controllers.GestionAnimal.SuiviReadController" alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Text text="Suivi List" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <TableView fx:id="suiviTableView" prefHeight="400">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="animalColumn" text="Animal Name" prefWidth="100"/>
            <TableColumn fx:id="temperatureColumn" text="Temperature" prefWidth="100"/>
            <TableColumn fx:id="rythmeCardiaqueColumn" text="Heart Rate" prefWidth="100"/>
            <TableColumn fx:id="etatColumn" text="State" prefWidth="100"/>
            <TableColumn fx:id="idClientColumn" text="Client ID" prefWidth="80"/>
            <TableColumn fx:id="analysisColumn" text="Analysis" prefWidth="150"/>
            <TableColumn fx:id="veterinaireNomColumn" text="Veterinaire Nom" prefWidth="100"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>
    <Button text="Add New Suivi" onAction="#handleAddSuivi" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>