<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.VeterinaireDeleteController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Text style="-fx-font-size: 18; -fx-font-weight: bold;" text="Delete Veterinaire" />
    <Label fx:id="confirmationLabel" style="-fx-font-size: 14;" text="Are you sure you want to delete this Veterinaire?">
      <stylesheets>
         <URL value="@stylee.css" />
         <URL value="@form.css" />
      </stylesheets></Label>

    <VBox alignment="CENTER" spacing="5">
        <Label fx:id="nomLabel" style="-fx-font-weight: bold;" />
        <Label fx:id="emailLabel" style="-fx-font-weight: bold;" />
        <!-- Make sure idField is correctly defined here -->
        <TextField fx:id="idField" promptText="Enter Veterinaire ID">
         <stylesheets>
            <URL value="@form.css" />
            <URL value="@stylee.css" />
         </stylesheets></TextField>
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleDeleteVeterinaire" style="-fx-background-color: #f44336; -fx-text-fill: white;" stylesheets="@stylee.css" text="Delete" />
        <Button onAction="#handleCancel" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Cancel" />
    </HBox>
   <stylesheets>
      <URL value="@stylee.css" />
      <URL value="@styleee.css" />
      <URL value="@form.css" />
      <URL value="@style.css" />
   </stylesheets>

</VBox>
